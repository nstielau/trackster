<%
links = []

if current_user
  links << ["Dashboard", "/"]
  links << ["My Tracks", "/tracks"]
  links << ["Add Track", "/tracks/new"]
else
  links << ["Home", "/"]
end
links << ["Help", "/help"]
%>
<ul id="nav">
<% links.each do |text, url |%>
  <% if request.env["PATH_INFO"] == url %>
    <li class="page_item current_page_item"><a href="<%= url -%>"><%= text -%></a></li>
  <% else %>
    <li class="page_item"><a href="<%= url -%>"><%= text -%></a></li>
  <% end %>
<% end %>
</ul>